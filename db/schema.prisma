datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())   
  name          String?
  email         String    @unique
  password      String 
  image         String?
}

model Agent {
  id              String    @id @default(cuid())   
  name            String
  email           String    @unique
  password        String 
  image           String?
  description     String?
  telephoneNumber String?
  website         String?
  salesListings   SalesListing[]
}

model SalesListing {
  id              String            @id @default(cuid())  
  agent           Agent             @relation(fields: [agentId], references: [id])
  agentId         String            // relation scalar field  (used in the `@relation` attribute above) 
  active          Boolean           @default(true)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  address         String
  price           Int
  propertyType    String
  bedrooms        Int
  bathrooms       Int
  keyFeatures     String?
  description     String?
  mapCoordinates  String?
  images          SalesImage[]
}

model SalesImage {
  id              String            @id @default(cuid())  
  file            String
  salesListing    SalesListing      @relation(fields: [salesListingId], references: [id])
  salesListingId  String            // relation scalar field  (used in the `@relation` attribute above)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}
